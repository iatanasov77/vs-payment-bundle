<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>
    <mapped-superclass name="Vankosoft\PaymentBundle\Model\ContentService">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        
        <field name="enabled" column="public" type="boolean">
            <options>
                <option name="default">1</option>
            </options>
        </field>
        
        <field name="slug" column="slug" type="string" length="255" nullable="false" unique="true">
            <gedmo:slug unique="true" style="lower" updatable="true" separator="-" fields="title, id" />
        </field>
        
        <field name="title" type="string" >
            <gedmo:translatable />
        </field>
        
        <field name="description" type="string" >
            <gedmo:translatable />
        </field>
        
        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>
    
    <!--
            Used locale to override Translation listener`s locale
            this is not a mapped field of entity metadata, just a simple property
            and it is not necessary because globally locale can be set in listener
        -->
        <gedmo:translation entity="Vankosoft\ApplicationBundle\Model\Interfaces\TranslationInterface" locale="locale" />
    </mapped-superclass>
</doctrine-mapping>