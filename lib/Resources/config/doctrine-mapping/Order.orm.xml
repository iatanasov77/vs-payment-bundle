<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="Vankosoft\PaymentBundle\Model\Order">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        
        <many-to-one field="user" target-entity="Vankosoft\PaymentBundle\Model\Interfaces\PaymentsUserInterface" inversed-by="orders" >
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>
        <many-to-one field="paymentMethod" target-entity="Vankosoft\PaymentBundle\Model\Interfaces\PaymentMethodInterface" inversed-by="orders" >
            <cascade>
                <cascade-all />
            </cascade>
        </many-to-one>
        
        <one-to-one field="payment" target-entity="Vankosoft\PaymentBundle\Model\Interfaces\PaymentInterface" inversed-by="order" >
            <join-column name="payment_id" referencedColumnName="id" nullable="false" />
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-one>

        <field name="totalAmount" column="total_amount" type="float" nullable="false" />
        <field name="currencyCode" column="currency_code" type="string" length="8" nullable="false" />
        
        <one-to-many field="items" target-entity="Vankosoft\PaymentBundle\Model\Interfaces\OrderItemInterface" mapped-by="order" >
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
