{% for cat in pricingPlanCategories %}
    {% if cat.plans.count() %}
        <!-- pricing -->
        <div class="section pricingPlanCategorySection">
            <div class="container">
                <div class="row">
                    <!-- section title -->
                    <div class="col-12">
                        <h4 class="section__title">{{ cat.name }}</h4>
                    </div>
                    <hr class="soft" />
                    <!-- end section title -->
                    
                    {% if app.user %}
                        {% set currentSubscription = app.user.pricingPlanSubscriptions | last %}
                    {% endif %}
                    
                    <ul class="thumbnails">
                        {% for plan in cat.plans %}
                            {% if plan.enabled %}
                                {% if
                                    app.user and
                                    currentSubscription is defined and
                                    currentSubscription and
                                    currentSubscription.pricingPlan == plan and
                                    currentSubscription.active
                                %}
                                    {% set planNotPaid  = ( not currentSubscription.paid ) %}
                                    {% set planActive   = true %}
                                    {% set planLower    = false %}
                                {% else %}
                                    {% set planNotPaid  = false %}
                                    {% set planActive   = false %}
                                    {% if currentSubscription is defined  and 
                                        ( not currentSubscription or currentSubscription.pricingPlan.price < plan.price ) %}
                                        {% set planLower = false %}
                                     {% else %}
                                        {% set planLower = true %}
                                    {% endif %}         
                                {% endif %}
                                
                                <li class="span3">
                                    <div
                                        class="thumbnail {% if planActive or planLower %} plan--active{% endif %}{% if plan.premium %} plan--premium{% endif %}"
                                    >
                                        <div class="caption">
                                            <h5>{{ plan.title }}</h5>
                                            <p>{{ plan.description | raw }}</p>
                                            <p>{{ plan.price }} {{ plan.currencyCode }}</p>
                                            <h4 style="text-align:center">
                                                {% if app.user %}
                                                    {% if planNotPaid %}
                                                        <button type="button"
                                                            class="btn btn-primary btnPayPlan"
                                                            data-url="{{ path( 'vs_payment_select_pricing_plan_form', {'pricingPlanId': plan.id, 'subscriptionId': currentSubscription.id} ) }}"
                                                        >
                                                            <span>{{ 'vs_payment.template.pricing_plans.pay_plan' | trans( {},'VSPaymentBundle' ) }}</span>
                                                        </button>
                                                    {% elseif planActive %}
                                                        <button type="button" class="btn">
                                                            <span>{{ 'vs_payment.template.pricing_plans.current_plan' | trans( {},'VSPaymentBundle' ) }}</span>
                                                        </button>
                                                    {% elseif planLower %}
                                                        <button type="button" class="btn">
                                                            <span>{{ 'vs_payment.template.pricing_plans.lower_than_active' | trans( {},'VanzVideoPlayer' ) }}</span>
                                                        </button>
                                                    {% else %}
                                                        <button type="button"
                                                            class="btn btn-primary btnChoosePlan"
                                                            data-url="{{ path( 'vs_payment_select_pricing_plan_form', {'pricingPlanId': plan.id} ) }}"
                                                        >
                                                            <span>{{ 'vs_payment.template.pricing_plans.choose_plan' | trans( {},'VSPaymentBundle' ) }}</span>
                                                        </button>
                                                    {% endif %}
                                                {% else %}
                                                    <a class="btn btn-primary"
                                                        href="{{ path( 'vs_users_register_form' ) }}"
                                                    >
                                                        <span>{{ 'vs_users.form.registration.register' | trans( {},'VSUsersBundle' ) }}</span>
                                                    </a> 
                                                {% endif %}
                                            </h4>
                                        </div>
                                    </div>
                                </li>
                                
                            {% endif %}
                        {% endfor %}
                        </ul>
                        <hr class="soft"/>
                </div>
            </div>
        </div>
        <!-- end pricing -->
    {% endif %}
{% endfor %}