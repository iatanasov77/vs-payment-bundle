{% extends "layout.html.twig" %}
{% block title %}{{ parent() }} :: Installed Payment Methods{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Installed Payment Methods{% endblock %}

{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Payment Methods</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': 'menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        <div class="row">
        	<div class="btn-group">
                <a class="btn btn-primary" href="{{ path('ia_payment_methods_config', {'id': 0}) }}">
                    Create New Payment Method
                </a>
            </div>
        </div>
        <div class="row">   
            <div class="col-lg-12">
                <section class="panel">
	                <table class="table table-striped table-advance table-hover">
	                    <tr>
	                        <th width="50">N</th>
	                        <th>Payment Method</th>
	                        <th>Gateway</th>
	                        
	                        <th>Route</th>
	                        <th>Active</th>
	                        <th width="150">Action</th>
	                    </tr>
	                    {% for item in methods %}
	                        <tr>
	                            <td>
	                                {{ loop.index }}
	                            </td>
	                            <td>
	                                <a href="{{ path( 'ia_payment_methods_config', {'id': item.id} ) }}">
	                                    {{ item.name }}
	                                </a>
	                            </td>
	                            <td>{{ item.gateway.gatewayName }}</td>
	                            <td>{{ item.route }}</td>
	                            <td>{{ item.active }}</td>
	                            <td>
	                                <div class="btn-group">
	                                    
	                                </div>
	                            </td>
	                        </tr>
	                    {% endfor %}
	                </table>
            	</section>
            </div>
        </div>
    </div>
{% endblock %}
