{% extends "layout.html.twig" %}
{% block title %}{{ parent() }} :: Payment Method Config{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Payment Method Config{% endblock %}

{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Payment Method Config</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                    	<nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': 'menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        
    	<div class="row">
            <!-- ============================================================== -->
            <!-- basic tabs  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">

                	<div class="card-body">
			            {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
			                {{ form_widget(form._token) }}
			
			                {% if form_errors(form) is not empty %}
			                    <div class="alert alert-block alert-danger fade in">
			                        <button type="button" class="close close-sm" data-dismiss="alert">
			                            <i class="icon-remove"></i>
			                        </button>
			                        <strong>Error!</strong> {{ form_errors(form) }}
			                    </div>
			                {% endif %}
			                
			                <section class="panel">
			                    <header class="panel-heading"></header>
			                    <div class="panel-body">
			                        <div class="form-row">
			                            {{ form_label(form.name, null, {
			                                'label_attr': {'class': 'control-label col-lg-2'}
			                                }) 
			                            }}
			                            <div class="col-lg-10">
			                                <div class="checkbox">
			                                    {{ form_widget(form.name) }}
			                                </div>
			                            </div>
			                        </div>
			                        <div class="form-row">
			                            {{ form_label(form.route, null, {
			                                'label_attr': {'class': 'control-label col-lg-2'}
			                                }) 
			                            }}
			                            <div class="col-lg-14">
			                                <div class="checkbox">
			                                    {{ form_widget(form.route) }}
			                                </div>
			                            </div>
			                        </div>
			                        <div class="form-row"></div>
			                        <div class="form-row">
			                            {{ form_label(form.active, null, {
			                                'label_attr': {'class': 'control-label col-lg-2'}
			                                }) 
			                            }}
			                            <div class="col-lg-10">
			                                <div class="checkbox">
			                                    {{ form_widget(form.active) }}
			                                </div>
			                            </div>
			                        </div>
			                        <div class="form-row"></div>
			                        <div class="form-row">
			                            {{ form_label(form.gateway, null, {
			                                'label_attr': {'class': 'control-label col-lg-2'}
			                                }) 
			                            }}
			                            <div class="col-lg-10">
			                                <div class="checkbox">
			                                    {{ form_widget(form.gateway) }}
			                                </div>
			                            </div>
			                        </div>
			                        <div class="form-row"></div>
			                    </div>
			                </section>
			                {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
			                {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
			            {{ form_end(form, {'render_rest': false}) }}
					</div>
				</div>
			</div>
        </div>
    </div>   
{% endblock %}
