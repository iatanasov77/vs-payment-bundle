{% extends "@VSApplication/layout.html.twig" %}

{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
    {% set pageTitle = 'vs_payment.template.coupon_update_title' | trans( {},'VSPaymentBundle' ) %}
{% else %}
    {% set pageTitle = 'vs_payment.template.coupon_create_title' | trans( {},'VSPaymentBundle' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}

{% block pageTitle %}
    <h2 class="pageheader-title"><i class="icon_genius"></i> {{ pageTitle }}</h2>
    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">{{ 'vs_payment.template.coupon_title' | trans( {},'VSPaymentBundle' ) }}</h5>
                <div class="card-body">
                    {% if form_errors(form) is not empty %}
                        <div class="alert alert-block alert-danger fade in">
                            <button type="button" class="close close-sm" data-bs-dismiss="alert">
                                <i class="icon-remove"></i>
                            </button>
                            <strong>{{ 'vs_application.form.errors_title' | trans( {},'VSApplicationBundle' ) }}</strong> {{ form_errors( form ) }}
                        </div>
                    {% endif %}
                    
                    {% if( item.id ) %}
                        {% set method = "PUT" %}
                    {% else %}
                        {% set method = "POST" %}
                    {% endif %}
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '}, 'method': method }) }}
                        
                        <div class="form-group">
                            <label class="custom-control custom-checkbox">  
                                <input type="checkbox" id="coupon_form_enabled"
                                    class="custom-control-input form-check-input"
                                    name="coupon_form[enabled]"
                                    value="{{ item.enabled }}"
                                    {% if item.enabled %}checked="checked"{% endif %}
                                />
                                <span class="custom-control-label">{{ 'vs_payment.form.coupon.valid' | trans( {},'VSPaymentBundle' ) }}</span>
                            </label>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.locale, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.locale, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    
                        <div class="form-group">
                            {{ form_label(form.code, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            <div class="input-group mb-3">
                                {{ form_widget(form.code, {'attr': {'class': 'form-control' }}) }}
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-primary" id="btnGenerateCode">
                                        {{ 'vs_payment.form.generate_code' | trans( {},'VSPaymentBundle' ) }}
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.name, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.amountOff, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.amountOff, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.currency, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.currency, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.percentOff, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.percentOff, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        {{ vs_form.buttons( form ) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>  
{% endblock content %}
