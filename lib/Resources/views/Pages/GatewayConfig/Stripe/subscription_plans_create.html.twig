{% extends "@VSApplication/layout.html.twig" %}

{% block title %}{{ parent() }} :: {{ 'vs_payment.template.gateway_config_ext.index.title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_payment.template.gateway_config_ext.index.title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">{{ 'vs_payment.template.exchange_rate_title' | trans( {},'VSPaymentBundle' ) }}</h5>
                <div class="card-body">
                    {% if form_errors(form) is not empty %}
                        <div class="alert alert-block alert-danger fade in">
                            <button type="button" class="close close-sm" data-bs-dismiss="alert">
                                <i class="icon-remove"></i>
                            </button>
                            <strong>{{ 'vs_application.form.errors_title' | trans( {},'VSApplicationBundle' ) }}</strong> {{ form_errors( form ) }}
                        </div>
                    {% endif %}
                    
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
                        <div class="form-group">
                            {{ form_label(form.name, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        <button class="btn btn-sm btn-success float-right" type="submit" name="{{ form.btnSubmit.vars.full_name }}" id="{{ form.btnSubmit.vars.id }}">
                            <i class="mdi mdi-gamepad-circle"></i> {{ form.btnSubmit.vars.label }}
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>  
{% endblock content %}