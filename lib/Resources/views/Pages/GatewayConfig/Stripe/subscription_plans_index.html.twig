{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}

{% block title %}{{ parent() }} :: {{ 'vs_payment.template.gateway_config_ext.index.title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_payment.template.gateway_config_ext.index.title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h5 class="float-start">
                {{ 'vs_payment.template.create_stripe_plan' | trans( {},'VSPaymentBundle' ) }}
            </h5>
            <a href="{{ path( 'gateway_config_stripe_subscription_plans_create' ) }}" class="btn btn-primary float-end">
                {{ 'vs_payment.template.create_stripe_plan' | trans( {},'VSPaymentBundle' ) }}
            </a>
        </div>
        
        <div class="card-body">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th width="50">N</th>
                        
                    </tr>
                </thead>
                <tbody>
                {% for item in availablePlans %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">
                            {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div>
                <div style="float: left; margin-left: 30px; margin-bottom: 20px;">
                    <a class="btn btn-primary"
                        href="{{ path( 'gateway_config_stripe_subscription_plans_create' ) }}"
                        title="{{ 'vs_payment.template.create_stripe_plan' | trans( {},'VSPaymentBundle' ) }}"
                    >
                        {{ 'vs_payment.template.create_stripe_plan' | trans( {},'VSPaymentBundle' ) }}
                    </a>
                </div>
                <div style="float: right; margin-right: 30px; margin-bottom: 20px;">
                    
                </div>
                <div style="clear: both;"></div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th width="50">N</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in availablePlans %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">
                                {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </section>
        </div>
    </div>
{% endblock %}