{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% block title %}{{ parent() }} :: {{ 'vs_payment.template.payum_stripe_objects.create_stripe_coupon' | trans( {},'VSPaymentBundle' ) }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_payment.template.payum_stripe_objects.create_stripe_coupon' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">{{ 'vs_payment.template.payum_stripe_objects.create_stripe_coupon' | trans( {},'VSPaymentBundle' ) }}</h5>
                <div class="card-body">
                    {% if formErrors is defined %}
                        {{ vs_form.errors( formErrors ) }}     
                    {% endif %}
                    
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
                        <div class="form-group">
                            {{ form_label(form.duration, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.duration, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.duration_in_months, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.duration_in_months, {'attr': {'class': 'form-control' }}) }}
                            <p>Required only if duration is repeating, in which case it must be a positive integer that specifies the number of months the discount will be in effect.</p>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.percent_off, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.percent_off, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        <div class="input-group row vsFormButtonsGroup mt-5">
                            <div class="col-sm-2">
                                {{ form_widget(form.btnSubmit, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
                            </div>
                            <div class="col-sm-2">
                                <a class="btn btn-secondary" href="{{ path( 'gateway_config_stripe_subscription_objects_index' ) }}">
                                    {{ 'vs_application.form.cancel' | trans( {},'VSApplicationBundle' ) }}
                                </a>
                            </div>
                            <div class="col-sm-6"></div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>  
{% endblock %}