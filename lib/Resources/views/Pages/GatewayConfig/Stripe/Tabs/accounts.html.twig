{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}

<div class="card">
    <div class="card-header">
        <h5 class="float-start">
            {{ 'vs_payment.template.payum_stripe_objects.stripe_connected_accounts' | trans( {},'VSPaymentBundle' ) }}
        </h5>
    </div>
    
    <div class="card-body">
        <table class="table table-striped table-advance table-hover">
            <thead>
                <tr>
                    <th width="50">N</th>
                    <th>ID</th>
                    <th>{{ 'vs_payment.template.payum_stripe_objects.email' | trans( {},'VSPaymentBundle' ) }}</th>
                    <th>{{ 'vs_payment.template.payum_stripe_objects.type' | trans( {},'VSPaymentBundle' ) }}</th>
                    <th>{{ 'vs_payment.template.payum_stripe_objects.country' | trans( {},'VSPaymentBundle' ) }}</th>
                    <th>{{ 'vs_payment.template.payum_stripe_objects.default_currency' | trans( {},'VSPaymentBundle' ) }}</th>
                </tr>
            </thead>
            <tbody>
            {% for item in availableConnectedAccounts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ item.id }}</td>
                    <td>{{ item.email }}</td>
                    <td>{{ item.type }}</td>
                    <td>{{ item.country }}</td>
                    <td>{{ item.default_currency }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">
                        {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>