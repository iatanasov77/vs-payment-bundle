<div class="modal-header">
    <h5 class="modal-title">
        {{ 'vs_payment.template.payum_stripe_objects.create_stripe_plan' | trans( {},'VSPaymentBundle' ) }}
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> </button>
</div>

<div class="modal-body">
    <div class="card alert mb-2">
        <div class="card-body">
            {% if formErrors is defined %}
                {{ vs_form.errors( formErrors ) }}
            {% endif %}
            
            {{ form_start(form, { 'action': path( 'gateway_config_stripe_objects_create_plan' ), 'attr': {'class': 'form-horizontal '} }) }}
                <div class="form-group">
                    {{ form_label(form.id, null, {
                        'label_attr': {'class': 'form-label'}
                        }) 
                    }}
                    {{ form_widget(form.id, {'attr': {'class': 'form-control' }}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.amount, null, {
                        'label_attr': {'class': 'form-label'}
                        }) 
                    }}
                    {{ form_widget(form.amount, {'attr': {'class': 'form-control' }}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.currency, null, {
                        'label_attr': {'class': 'form-label'}
                        }) 
                    }}
                    {{ form_widget(form.currency, {'attr': {'class': 'form-select' }}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.interval, null, {
                        'label_attr': {'class': 'form-label'}
                        }) 
                    }}
                    {{ form_widget(form.interval, {'attr': {'class': 'form-select' }}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.productName, null, {
                        'label_attr': {'class': 'form-label'}
                        }) 
                    }}
                    {{ form_widget(form.productName, {'attr': {'class': 'form-control' }}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<div class="modal-footer" id="imContainer">
    <button type="button" class="btn btn-primary StripeObjectSubmit">
        {{ 'vs_application.form.save' | trans( {},'VSApplicationBundle' ) }}
    </button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        {{ 'vs_application.form.cancel' | trans( {},'VSApplicationBundle' ) }}
    </button>
</div>