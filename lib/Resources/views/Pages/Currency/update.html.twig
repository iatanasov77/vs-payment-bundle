{% extends "@VSApplication/layout.html.twig" %}

{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
    {% set pageTitle = 'vs_payment.template.currency_update_title' | trans( {},'VSPaymentBundle' ) %}
{% else %}
    {% set pageTitle = 'vs_payment.template.currency_create_title' | trans( {},'VSPaymentBundle' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}

{% block pageTitle %}
    <h2 class="pageheader-title"><i class="icon_genius"></i> {{ pageTitle }}</h2>
    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">{{ 'vs_payment.template.currency_title' | trans( {},'VSPaymentBundle' ) }}</h5>
                <div class="card-body">
                    {% if form_errors(form) is not empty %}
                        <div class="alert alert-block alert-danger fade in">
                            <button type="button" class="close close-sm" data-bs-dismiss="alert">
                                <i class="icon-remove"></i>
                            </button>
                            <strong>{{ 'vs_application.form.errors_title' | trans( {},'VSApplicationBundle' ) }}</strong> {{ form_errors( form ) }}
                        </div>
                    {% endif %}
                    
                    {% if( item.id ) %}
                        {% set method = "PUT" %}
                    {% else %}
                        {% set method = "POST" %}
                    {% endif %}
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '}, 'method': method }) }}
                        <div class="form-group">
                            {{ form_label(form.code, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.code, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        {{ vs_form.buttons( form ) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>  
{% endblock content %}
