{% extends "@VSApplication/layout.html.twig" %}
{% block title %}{{ parent() }} :: Payment Gateways{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Payment Gateways{% endblock %}

{% block content %}
    {# FFFFFFFFFFFFFFFFFFFFFFFFFFFF #}
    <div class="row">
    	<div class="btn-group">
            <a class="btn btn-primary" href="{{ path('vs_payment_gateways_config', {'gatewayName': 0}) }}">
                Create New Gateway
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <tr>
                        <th width="50">N</th>
                        <th>Payment Gateway</th>
                        <th>Gateway Factory</th>
                        <th width="150">Action</th>
                    </tr>
                    {% for item in items %}
                        <tr>
                            <td>
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path('vs_payment_gateways_config', {'gatewayName': item.gatewayName}) }}">
                                    {{ item.gatewayName }}
                                </a>
                            </td>
                            <td>{{ item.factoryName }}</td>
                            <td>
                                <div class="btn-group">
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="{{ path('vs_payment_gateways_config', {'gatewayName': item.gatewayName}) }}">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
        	</section>
        </div>
    </div>
    
{% endblock %}
