{% extends "@VSApplication/layout.html.twig" %}
{% block title %}{{ parent() }} :: {{ 'vs_payment.template.gateway_config_ext.index.title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_payment.template.gateway_config_ext.index.title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block content %}
{# Remove this button, it is added in the menue
    <div class="row">
    	<div class="btn-group">
            <a class="btn btn-primary" href="{{ path('vs_payment_gateways_config', {'gatewayName': 0}) }}">
                {{ 'vs_payment.template.gateway_config_ext.index.create_new_gateway' | trans( {},'VSPaymentBundle' ) }}
            </a>
        </div>
    </div>
#}
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <tr>
                        <th width="50">N</th>
                        <th>{{ 'vs_payment.template.gateway_config_ext.index.payment_gateway' | trans( {},'VSPaymentBundle' ) }}</th>
                        <th>{{ 'vs_payment.template.gateway_config_ext.index.gateway_factory' | trans( {},'VSPaymentBundle' ) }}</th>
                        <th width="150">{{ 'vs_payment.template.action' | trans( {},'VSPaymentBundle' ) }}</th>
                    </tr>
                    {% for item in items %}
                        <tr>
                            <td>
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path('vs_payment_gateways_config', {'gatewayName': item.gatewayName}) }}">
                                    {{ item.gatewayName }}
                                </a>
                            </td>
                            <td>{{ item.factoryName }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="{{ path('vs_payment_gateways_config', {'gatewayName': item.gatewayName}) }}">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
        	</section>
        </div>
    </div>
    
{% endblock %}
