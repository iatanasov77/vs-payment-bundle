{% extends "@VSApplication/layout.html.twig" %}
{% block title %}{{ parent() }} :: Payment Methods{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Payment Methods{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th width="50">N</th>
                            <th>Payment Method</th>
                            <th>Gateway</th>
                            
                            <th>Active</th>
                            <th width="150">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in methods %}
                        <tr>
                            <td>
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path( 'vs_payment_methods_config', {'id': item.id} ) }}">
                                    {{ item.name }}
                                </a>
                            </td>
                            <td>{{ item.gateway.gatewayName }}</td>
                            <td>
                                {% if item.active %}
                                    <i class="fas fa-check" style="color: #82c91e;">
                                {% else %}
                                    <i class="fas fa-times" style="color: #ff1e1e;"></i>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="{{ path('vs_payment_methods_config', {'id': item.id}) }}">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
        	</section>
        </div>
    </div>
{% endblock %}
