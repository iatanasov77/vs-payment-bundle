{% extends "@VSApplication/layout.html.twig" %}
{% block title %}{{ parent() }} :: Payment Methods{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Payment Methods{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <tr>
                        <th width="50">N</th>
                        <th>Payment Method</th>
                        <th>Gateway</th>
                        
                        <th>Active</th>
                        <th width="150">Action</th>
                    </tr>
                    {% for item in methods %}
                        <tr>
                            <td>
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path( 'ia_payment_methods_config', {'id': item.id} ) }}">
                                    {{ item.name }}
                                </a>
                            </td>
                            <td>{{ item.gateway.gatewayName }}</td>
                            <td>{{ item.active }}</td>
                            <td>
                                <div class="btn-group">
                                    
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
        	</section>
        </div>
    </div>
{% endblock %}
