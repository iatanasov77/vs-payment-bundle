{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}
{% from "@VSApplication/Macros/pagination.html.twig" import pagination %}

{% block title %}{{ parent() }} :: {{ 'vs_payment.template.currency_index_title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_payment.template.currency_index_title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th width="50">N</th>
                            <th>{{ 'vs_payment.template.payment_number' | trans( {},'VSPaymentBundle' ) }}</th>
                            <th>{{ 'vs_payment.template.payment_description' | trans( {},'VSPaymentBundle' ) }}</th>
                            <th>{{ 'vs_payment.template.payment_client_email' | trans( {},'VSPaymentBundle' ) }}</th>
                            <th>{{ 'vs_payment.template.payment_total_amount' | trans( {},'VSPaymentBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_created' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_updated' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th width="150">{{ 'vs_payment.template.action' | trans( {},'VSPaymentBundle' ) }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in resources %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ item.number }}</td>
                            <td>{{ item.description }}</td>
                            <td>{{ item.clientEmail }}</td>
                            <td>{{ item.totalAmount }} {{ intlCurrencies[item.currencyCode]['symbol'] }}</td>
                            <td>{{ item.createdAt }}</td>
                            <td>{{ item.updatedAt }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-danger btnDeleteResource"
                                        href="{{ path('vs_payment_payment_delete', {'id': item.id}) }}" 
                                        data-csrfToken="{{ csrf_token( item.id ) }}" 
                                        title="{{ 'vs_application.template.items_index_row_action_delete' | trans( {},'VSApplicationBundle' ) }}"
                                    >
                                        <i class="icon_close_alt2"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">
                                {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </section>
            
            {% if resources.haveToPaginate() %}
                {{ pagerfanta( resources, null, { 'proximity': 10 } ) }}
            {% endif %}
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/recieved-payments' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/recieved-payments' ) }}
{% endblock %}
