{% extends "@VSApplication/layout.html.twig" %}

{% if( item.id ) %}
	{% set pageTitle = 'vs_payment.template.customer_groups_update_title' | trans( {},'VSPaymentBundle' ) %}
{% else %}
	{% set pageTitle = 'vs_payment.template.customer_groups_create_title' | trans( {},'VSPaymentBundle' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {% if(item.id) %}{{ pageTitle }}: {{ item.name }}{% else %}{{ pageTitle }}{% endif %}{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">{{ 'vs_payment.template.customer_groups_title' | trans( {},'VSPaymentBundle' ) }}</h5>
                <div class="card-body">
                	{% if form_errors(form) is not empty %}
		                <div class="alert alert-block alert-danger">
		                    <button type="button" class="close close-sm" data-bs-dismiss="alert">
		                        <i class="fa fa-times"></i>
		                    </button>
		                    <strong>{{ 'vs_application.form.errors_title' | trans( {},'VSApplicationBundle' ) }}</strong> {{ form_errors(form) }}
		                </div>
		            {% endif %}
                    <div id="pageCategoryFormContainer" data-pageId="{{ item.id }}">
                        {% include '@VSPayment/Pages/CustomerGroups/partial/group_form.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    
    {{ encore_entry_link_tags( 'js/customer-groups-edit' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
   
    {{ encore_entry_script_tags( 'js/customer-groups-edit' ) }}
{% endblock %}
