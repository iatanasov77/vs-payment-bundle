{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: {{ 'vs_payment.template.pricing_plan_categories_index_title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_payment.template.pricing_plan_categories_index_title' | trans( {},'VSPaymentBundle' ) }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
            
            {% if items|length > 0 %}
            	<table class="table table-striped table-advance table-hover" id="tblCategories">
                    <thead>
                        <tr>
                            <th>{{ 'vs_application.template.items_index_row_category' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_translations' | trans( {},'VSApplicationBundle' ) }}</th>
                            <th>{{ 'vs_application.template.items_index_row_action' | trans( {},'VSApplicationBundle' ) }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr data-node-id="{{ item.id }}" {% if parentId %}data-node-pid="{{ item.parent.id }}"{% endif %}>
                                <td>{{ item.name }}</td>
                                <td>
                                    {% for locale in translations[item.id] %}
                                        <i class="flag flag-{{ locale | split( '_' )[1] | lower }}"></i>
                                        {% if not loop.last %}&nbsp;{% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    <a class="btn btn-primary"
                                       href="{{ path('vs_payment_customer_group_update', {'id': item.id}) }}"
                                       title="{{ 'vs_application.template.items_index_row_action_edit' | trans( {},'VSApplicationBundle' ) }}"
                                    >
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-danger btnDeleteResource"
                                        href="{{ path('vs_payment_customer_group_delete', {'id': item.id}) }}"
                                        data-csrfToken="{{ csrf_token( item.id ) }}" 
                                        title="{{ 'vs_application.template.items_index_row_action_delete' | trans( {},'VSApplicationBundle' ) }}"
                                    >
                                        <i class="icon_close_alt2"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                {{ alerts.info( 'vs_application.template.there_are_no_items_to_display' | trans( {},'VSApplicationBundle' ) ) }}
            {% endif %}
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    {{ encore_entry_link_tags( 'js/pricing-plan-categories' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/pricing-plan-categories' ) }}
{% endblock %}
