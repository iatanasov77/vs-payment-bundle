{% extends "@VSApplication/layout.html.twig" %}
{% block title %}{{ parent() }} :: Payment Method Config{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Payment Method Config{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<h5 class="card-header">Gateway: {{ gateway.gatewayName }}</h5>
            	<div class="card-body">
		            {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
		                {{ form_widget(form._token) }}
		
		                {% if form_errors(form) is not empty %}
		                    <div class="alert alert-block alert-danger fade in">
		                        <button type="button" class="close close-sm" data-dismiss="alert">
		                            <i class="icon-remove"></i>
		                        </button>
		                        <strong>Error!</strong> {{ form_errors(form) }}
		                    </div>
		                {% endif %}
		                <section class="panel">
		                    <header class="panel-heading"> Payment Method Config </header>
		                    <div class="panel-body">
		                        <div class="form-row">
		                            {{ form_label(form.gatewayName, null, {
                                        'label_attr': {'class': 'control-label col-lg-2'}
                                        }) 
                                    }}
		                            
		                            {{ form_widget(form.gatewayName) }}
		                            
		                        </div> 
		                    
		                        <div class="form-row">    
		                            {{ form_label(form.factoryName, null, {
                                        'label_attr': {'class': 'control-label col-lg-2'}
                                        }) 
                                    }}
		                            {{ form_widget(form.factoryName, {'attr': {
		                            	'data-getConfigUrl': path( 'ia_payment_gateways_config_options' )
		                            }}) }}
		                            <div class="col-lg-6">{{ form.factoryName.vars.value }}</div>
		                        </div>
		                        
		                        <div class="form-row">
		                            {{ form_label(form.currency, null, {
		                                'label_attr': {'class': 'control-label col-lg-2'}
		                                }) 
		                            }}
		                            <div class="col-lg-10">
		                                <div class="checkbox">
		                                    {{ form_widget(form.currency) }}
		                                </div>
		                            </div>
		                        </div>
		                        <div class="form-row">
								    {{ form_label(form.useSandbox, null, {
								        'label_attr': {'class': 'control-label col-lg-2'}
								        }) 
								    }}
								    <div class="col-lg-10">
								        <div class="checkbox">
								            {{ form_widget(form.useSandbox) }}
								        </div>
								    </div>
								</div>
		                        <div class="fieldsContainer" id="gatewayConfigOptions">
		                        	{% include 'IAPaymentBundle:GatewayConfig:config_options.html.twig' with {
	                            		'options': gateway.getConfig(false)
	                            	} %}
		                        </div>
		                    </div>
		                </section>
		                {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
		                {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
		            {{ form_end(form, {'render_rest': false}) }}
				</div>
			</div>
		</div>
    </div>  
{% endblock %}

{% block body_scripts %}
	{{ parent() }}
	
    {{ encore_entry_script_tags( 'gateway-config', null, 'new-template' ) }}  
{% endblock %}
